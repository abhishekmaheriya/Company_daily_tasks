<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp">
    <ImageView
        android:id="@+id/img1"
        android:src="@drawable/backarrow"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_width="30dp"
        android:layout_height="50dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_marginLeft="40dp"
        android:layout_width="86dp"
        android:layout_height="56dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/unnamed"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>

        <TextView
            android:id="@+id/txt1"
            android:text="Dev Jethva"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="130dp"
            android:textColor="@color/black"
            android:layout_width="150dp"
            android:layout_height="50dp"/>

        <TextView
            android:id="@+id/txt2"
            android:text="Online"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="35dp"
            android:textColor="@color/gray"
            android:layout_width="140dp"
            android:layout_height="50dp"/>

        <ImageView
            android:id="@+id/img2"
            android:src="@drawable/search"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="50dp"/>

        <ImageView
            android:id="@+id/img3"
            android:src="@drawable/option"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="320dp"
            android:layout_width="30dp"
            android:layout_height="50dp"/>
</androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/crd"
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/txt3"
            android:text="Bio"
            android:textSize="15dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="22dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="25dp"
            android:id="@+id/edt1"
            android:textColor="@color/gray"
            android:textSize="10dp"
            android:layout_marginLeft="22dp"
            android:text="Add a few words about yourself"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/crd1"
        android:layout_marginTop="10dp"
        android:layout_below="@id/crd"
        android:layout_width="match_parent"
        android:layout_height="340dp">

        <TextView
            android:id="@+id/txt4"
            android:text="Setting"
            android:layout_marginTop="20dp"
            android:textColor="@color/purple_500"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
            android:id="@+id/txt5"
            android:text="Notifications and Sounds"
                android:layout_marginTop="65dp"
            android:layout_marginLeft="20dp"
            android:drawablePadding="30dp"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_baseline_notifications_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



            <androidx.cardview.widget.CardView
                android:layout_marginTop="90dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/txt6"
                    android:text="Privacy and Storage"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="30dp"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/ic_baseline_lock_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="130dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/txt7"
                    android:text="Data Storage"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="30dp"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/ic_baseline_storage_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="175dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/txt8"
                    android:text="Chat Setting"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="30dp"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/ic_baseline_chat_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="215dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/txt9"
                    android:text="Folders"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="30dp"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/ic_baseline_folder_open_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_marginTop="255dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/txt10"
                    android:text="Devices"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="30dp"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/ic_baseline_devices_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="295dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/txt11"
                    android:text="Language"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="30dp"
                    android:textColor="@color/black"
                    android:drawableStart="@drawable/ic_baseline_language_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/crd2"
        android:layout_below="@id/crd1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TextView
            android:id="@+id/txt12"
            android:text="Help"
            android:textColor="@color/purple_500"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/txt13"
                android:text="Ask a Question"
                android:layout_marginTop="5dp"
                android:drawableStart="@drawable/ic_baseline_add_task_24"
                android:drawablePadding="30dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/txt14"
                android:text="Telegram FAQ"
                android:layout_marginTop="5dp"
                android:drawableStart="@drawable/ic_baseline_expand_circle_down_24"
                android:drawablePadding="30dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="150dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/txt15"
                android:text="Privacy Policy"
                android:layout_marginTop="5dp"
                android:drawableStart="@drawable/ic_baseline_policy_24"
                android:drawablePadding="30dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt16"
        android:text="Telegram for Andriod v7.8.0(2360) arm64-v8a"
        android:layout_below="@id/crd2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="70dp"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    </LinearLayout>
    </ScrollView>

</RelativeLayout>