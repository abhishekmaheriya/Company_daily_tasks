<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:verticalScrollbarPosition="right">

                <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/profile"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_25sdp"></ImageView>

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Abhishek "
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_170sdp"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:text="Owner/i-2"
                android:drawableStart="@drawable/ic_baseline_home_24"
                android:drawablePadding="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_170sdp"
                android:layout_marginTop="@dimen/_10sdp"></TextView>

            <TextView
                android:id="@+id/nodata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home"
                android:text="No data available"
                android:drawableStart="@drawable/ic_baseline_email_24"
                android:drawablePadding="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_170sdp"
                android:layout_marginTop="@dimen/_5sdp"></TextView>


            <TextView
                android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nodata"
                android:text="+917096345713"
                android:drawableStart="@drawable/ic_baseline_call_24"
                android:drawablePadding="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_170sdp"
                android:layout_marginTop="@dimen/_5sdp"></TextView>


            <TextView
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_profile"
                android:text="About Me"
                android:textSize="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_13sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:drawableStart="@drawable/ic_baseline_person_24"
                android:drawablePadding="@dimen/_15sdp"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"></TextView>


            <TextView
                android:id="@+id/mynotes"
                android:layout_below="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:textSize="@dimen/_15sdp"
                android:text="My Notes"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:drawableStart="@drawable/ic_baseline_sticky_note_2_24"
                android:drawablePadding="@dimen/_15sdp"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"></TextView>

            <TextView
                android:id="@+id/mytimeline"
                android:layout_below="@+id/mynotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:textSize="@dimen/_15sdp"
                android:text="My Timeline"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:drawableStart="@drawable/ic_baseline_access_time_filled_24"
                android:drawablePadding="@dimen/_15sdp"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"></TextView>

            <TextView
                android:id="@+id/details"
                android:layout_below="@+id/mytimeline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:textSize="@dimen/_15sdp"
                android:text="Professional Details"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:drawableStart="@drawable/ic_baseline_work_24"
                android:drawablePadding="@dimen/_15sdp"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"></TextView>

            <TextView
                android:id="@+id/settings"
                android:layout_below="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Settings"
                android:textSize="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:drawableStart="@drawable/ic_baseline_settings_24"
                android:drawablePadding="@dimen/_15sdp"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"></TextView>

            <TextView
                android:id="@+id/address"
                android:layout_below="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:textSize="@dimen/_15sdp"
                android:text="Share Address"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:drawableStart="@drawable/ic_baseline_location_on_24"
                android:drawablePadding="@dimen/_15sdp"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"></TextView>

            <TextView
                android:id="@+id/card"
                android:layout_below="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Share business card"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:textSize="@dimen/_15sdp"
                android:drawableStart="@drawable/ic_baseline_share_24"
                android:drawablePadding="@dimen/_15sdp"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"></TextView>

            <TextView
                android:id="@+id/myid"
                android:layout_below="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="My Id-card"
                android:textSize="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:drawableStart="@drawable/ic_baseline_credit_card_24"
                android:drawablePadding="@dimen/_15sdp"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"></TextView>

            <TextView
                android:id="@+id/member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/myid"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="Family Members"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/member"
                android:layout_marginLeft="@dimen/_170sdp"
                android:drawableStart="@drawable/ic_baseline_add_24"
                android:drawablePadding="@dimen/_5sdp"
                android:text="New Member"></TextView>

            <TextView
                android:id="@+id/no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/m"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:text="No Member Available!"></TextView>


            <TextView
                android:id="@+id/mypet"
                android:layout_below="@+id/no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:textStyle="bold"
                android:textSize="@dimen/_15sdp"
                android:text="My Pet"
                android:layout_marginLeft="@dimen/_15sdp"></TextView>

            <TextView
                android:id="@+id/newpet"
                android:layout_below="@+id/mypet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_170sdp"
                android:drawableStart="@drawable/ic_baseline_add_24"
                android:drawablePadding="@dimen/_5sdp"
                android:text="Add New Pet"></TextView>

            <TextView
                android:id="@+id/nopet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:text="No Member Available!"
                android:layout_below="@id/newpet"></TextView>


            <TextView
                android:id="@+id/emergency"
                android:layout_below="@+id/nopet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:textStyle="bold"
                android:textSize="@dimen/_15sdp"
                android:text="Emergency Number"
                android:layout_marginLeft="@dimen/_15sdp"></TextView>

            <TextView
                android:id="@+id/newnumber"
                android:layout_below="@+id/emergency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_170sdp"
                android:drawableStart="@drawable/ic_baseline_add_24"
                android:drawablePadding="@dimen/_5sdp"
                android:text="New Number"></TextView>

            <TextView
                android:id="@+id/nocontact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:text="No Contact Available!"
                android:layout_below="@id/newnumber"></TextView>


        </RelativeLayout>

    </ScrollView>



</RelativeLayout>